<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Notifikasi.NotifikasiActivity">

    <TextView
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:text="Anda Sedang dalam Daerah Rawan Bencana"
        android:layout_above="@id/warning_icon"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginBottom="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/warning_icon"
        android:src="@drawable/ic_warning_24dp"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textColor="@android:color/white"
        android:text="@string/info_gempa"
        android:id="@+id/info_bencana"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@id/warning_icon"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.button.MaterialButton
        android:layout_below="@id/info_bencana"
        android:layout_marginTop="32dp"
        android:text="Cari Posko Terdekat"
        android:id="@+id/btn_cari_posko"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>